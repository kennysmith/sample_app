<h1>Listing events</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Description</th>
    <th>Location name</th>
    <th>Location address</th>
    <th>Location city</th>
    <th>Location state</th>
    <th>Location zip</th>
    <th>Website</th>
    <th>Cost</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Phone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.name %></td>
    <td><%= event.start_date %></td>
    <td><%= event.end_date %></td>
    <td><%= event.start_time %></td>
    <td><%= event.end_time %></td>
    <td><%= event.description %></td>
    <td><%= event.location_name %></td>
    <td><%= event.location_address %></td>
    <td><%= event.location_city %></td>
    <td><%= event.location_state %></td>
    <td><%= event.location_zip %></td>
    <td><%= event.website %></td>
    <td><%= event.cost %></td>
    <td><%= event.first_name %></td>
    <td><%= event.last_name %></td>
    <td><%= event.email %></td>
    <td><%= event.phone %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

