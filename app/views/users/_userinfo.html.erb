        <h3 class="one">Your account details</h3>
        <div class="control-group">
          <%= f.label :name, :class => "control-label" %> 
          <%= f.text_field :name %>
        </div>  

        <div class="control-group">
          <%= f.label :email, :class => "control-label" %>
          <%= f.text_field :email %>
        </div>  

