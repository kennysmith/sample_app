<% plid = Plan.find(params[:plan_id]) %>
<% downgrade = params[:downgrade] %>


<%= form_for @user, :html => {:class => "form-inline"} do |f|  %>
        <%= render 'shared/error_messages', object: f.object %>
        <% if downgrade == nil %>
            <div class="control-group">
              <%= f.label :name, :class => "control-label" %> 
              <%= f.text_field :name, :value => "Kenny Smith" %>
            </div>  

            <div class="control-group">
              <%= f.label :email, :class => "control-label" %>
              <%= f.text_field :email, :value => "Ken.edsmith@gmail.com" %>
            </div>  

            <div class="control-group">
              <%= f.label :password, :class => "control-label" %>
              <%= f.password_field :password, :value => "ripcurl" %>
            </div>  

            <div class="control-group">
              <%= f.label :password_confirmation, "Confirmation", :class => "control-label" %>
              <%= f.password_field :password_confirmation, :value => "ripcurl" %>
            </div>  

            <div class="control-group">  
        
         </div>
          <% end %>
          <br><br>
          
          <%= f.hidden_field :stripe_card_token %>
           <h3 class="two">Your payment information</h3>
          <div class="control-group">
              <%= label_tag :card_number, "Card Number ", :class => "control-label" %>
              <%= text_field_tag :card_number, nil, name: nil, :value => "4242424242424242" %>
          </div>
          <div class="control-group">
              <%= label_tag :card_code, "Security Code (CVV)", :class => "control-label" %>
              <%= text_field_tag :card_code, nil, name: nil, :value => "123" %>
          </div>
          <div class="control-group">
            <%= label_tag :card_month, "Card Expiration", :class => "control-label" %>
            <%= select_month nil, {add_month_numbers_true: true}, {name: nil, id: "card_month"}%>
            <%= select_year nil, {start_year: Date.today.year+1, end_year: Date.today.year+15}, {name: nil, id: "card_year" }%>
          </div>

          <div class="control-group">
            <%= link_to_add_fields "Subscriptions", f, :subscriptions %>
          </div>
          <%= f.submit "Create my account", class: "btn btn-large btn-primary", id: "submitacct" %>
  
        <% end %>